        {
            "name": "Simulate android|ios in browser",
            "type": "cordova",
            "request": "launch",
            "platform": "android|ios",
            "target": "chrome",
            "simulatePort": 8000,
            "livereload": true,
            "cwd": "${workspaceRoot}",
            "sourceMaps": true
        },
        {
            "name": "Run android|ios on device|emulator",
            "type": "cordova",
            "request": "launch",
            "platform": "android",
            "target": "emulator",
            "sourceMaps": true,
            "cwd": "${workspaceRoot}"
        },
